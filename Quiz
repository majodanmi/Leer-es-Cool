    <div id="result" class="result"></div>

    <script>
        function calculateResult() {
            const answers = document.querySelectorAll('input[type="radio"]:checked');
            const counts = {
                misterio: 0,
                fantasia: 0,
                romantico: 0,
                ciencia: 0
            };

            answers.forEach(answer => {
                counts[answer.value]++;
            });

            const maxGenre = Object.keys(counts).reduce((a, b) => counts[a] > counts[b] ? a : b);

            let genreName;
            switch(maxGenre) {
                case 'misterio':
                    genreName = 'Misterio/Thriller';
                    break;
                case 'fantasia':
                    genreName = 'Fantasía/Aventura';
                    break;
                case 'romantico':
                    genreName = 'Romántico/Drama';
                    break;
                case 'ciencia':
                    genreName = 'Ciencia Ficción/Distopía';
                    break;
            }

            document.getElementById('result').textContent = `Tu género literario preferido es: ${genreName}`;
        }
    </script>
